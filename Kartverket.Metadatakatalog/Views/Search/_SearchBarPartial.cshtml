﻿@using Kartverket.Metadatakatalog.Helpers
@*Searchbar Dropdown with bootstrap.js*@
<form id="searchForm" class="col-md-offset-2 col-md-8 searchbar">
    <h1 class="h-md">Søk i kartkatalogen</h1>
    <div class="input-group input-group-split-on-xs edgesKartkatalogen">
        @*Set edges* class for borders according to dropdown choice*@
        <div class="input-group-btn">
            <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">
                <span>Kartkatalogen</span>@*Set this to the text-property of the selected element (searchOptions.js).*@
                <span class="caret" style="float:right; margin-top:9px;"></span>
            </button>
            <ul class="geonorge-dropdown dropdown-menu" id="search-dropdown" tabindex="-1">
                <li tabindex="0" class="left-edge-geonorge"><a href="@Html.GeonorgeUrl()">Søk i Alt</a></li>
                <li tabindex="0" class="left-edge-artikler"><a href="@Html.GeonorgeArtiklerUrl()">Artikler og Dokumenter</a></li>
                <li tabindex="0" class="left-edge-kartkatalogen"><a href="/">Kartkatalogen</a></li>
                <li tabindex="0" class="left-edge-norgeskart"><a href="@Html.NorgeskartUrl()">Kartet</a></li>
                <li tabindex="0" class="left-edge-registre"><a href="@Html.RegistryUrl()">Registrene</a></li>
                <li tabindex="0" class="left-edge-objektkatalogen"><a href="@Html.ObjektkatalogUrl()">Objektkatalogen</a></li>
            </ul>
        </div><!-- /input-group-btn -->

        <div class="typeahead-query">
            <input name="text" type="search" class="form-control" title="Søketekst" value="@Model.Text" autocomplete="off" />
            
        </div>
        <span class="input-group-btn typeahead-button">
            <button class="btn" type="submit">Søk</button>
        </span>

    </div>
    
</form>

<div id="autocomplete" class="col-md-12 auto-result-row">

</div>
