<script type="text/x-template" id="copyUrlContentTemplate">
    <div class="text-center">
    <span  v-if="$root.viewType == 'listView'" v-bind:class="classNameButton" v-bind:data-clipboard-text="getCapabilitiesUrl" alt="Kopier til utklippstavle">
        Url til tjeneste
    </span>
    
    <span v-else v-bind:class="classNameIcon" data-toggle="tooltip" data-placement="bottom" title="Klikk for å kopiere urlen til utklippstavle" v-bind:data-clipboard-text="copyText" alt="Kopier til utklippstavle" onclick="">
