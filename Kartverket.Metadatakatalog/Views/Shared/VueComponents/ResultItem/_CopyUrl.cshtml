    </span>
    </div>
</script>

<script>
    var TableCopyUrl = {
        name: "table-copy-url",
        template: "#copyUrlContentTemplate",
        props: ["metadata"],
        data: function () {
            var data = {
                classNameIcon: "btn btn-copy input-group-addon",
                classNameButton: "btn btn-copy",
                copyText: this.metadata.GetCapabilitiesUrl,
                getCapabilitiesUrl: this.metadata.GetCapabilitiesUrl
            };
            return data;
        },
        created() {
            if (!this.getCapabilitiesUrl) {
                this.classNameIcon = "btn btn-copy input-group-addon disabled";
                this.classNameButton = "btn disabled";
            }
        }

