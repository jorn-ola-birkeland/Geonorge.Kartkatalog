<script type="text/x-template" id="showLegendDescriptionButtonTemplate">
    <div v-html="htmlElement"></div>
</script>

<script>
    function getShowLegendDescriptionButton(resultItem) {
        var ShowLegendDescriptionButton = {
            name: "showLegendDescriptionButton",
            template: "#showLegendDescriptionButtonTemplate",
            props: ["resultItem"],
            data: function () {
                return {
                    button: {
                        content: "Vis tegneregler",
                        className: "btn",
                        url: this.resultItem.LegendDescriptionUrl !== undefined ? this.resultItem.LegendDescriptionUrl : null,
                        title: "Vis tegneregler for " + this.resultItem.Title,
                        icon: {
                            className: "glyphicon glyphicon-picture"
                        },
                        attributes: [
                            { key: "onClick", value: "ga('send', 'event', 'MerInfo', 'tegneregler')" }
                        ]
                    },
                    htmlElement: null
                }
            },
            created: function () {
                if (this.button.url == null) {
                    this.button.attributes.push({ key: 'disabled', value: 'disabled' });
                    this.button.className += " disabled";
                }
                this.htmlElement = this.$parent.createButtonElement(this.button);
            }
        };
        return ShowLegendDescriptionButton;
    }
</script>




