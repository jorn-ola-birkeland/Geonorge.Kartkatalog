<script type="text/x-template" id="showProductSheetButtonTemplate">
    <div v-html="htmlElement"></div>
</script>

<script>
    function getShowProductSheetButton(resultItem) {
        var ShowProductSheetButton = {
            name: "showProductSheetButton",
            template: "#showProductSheetButtonTemplate",
            props: ["resultItem"],
            data: function () {
                return {
                    button: {
                        content: "Vis produktark",
                        className: "btn",
                        url: this.resultItem.ProductSheetUrl !== undefined ? this.resultItem.ProductSheetUrl : null,
                        title: "Vis produktark for " + this.resultItem.Title,
                        icon: {
                            className: "custom-icon custom-icon-info"
                        },
                        attributes: [
                            { key: "onClick", value: "ga('send', 'event', 'MerInfo', 'produktark')" }
                        ]
                    },
                    htmlElement: null
                }
            },
            created: function () {
                if (this.button.url == null) {
                    this.button.attributes.push({ key: 'disabled', value: 'disabled' });
                    this.button.className += " disabled";
                }
                this.htmlElement = this.$parent.createButtonElement(this.button);
            }
        };
        return ShowProductSheetButton;
    }
</script>



